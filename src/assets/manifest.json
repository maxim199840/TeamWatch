{
  "name": "Team Watch",
  "manifest_version": 2,
  "version": "0.3.0",
  "background": {
    "scripts": [
      "eventPage.js"
    ],
    "persistent": false
  },
  "permissions": [
    "storage",
    "tabs",
    "https://www.youtube.com/*"
  ],
  "content_security_policy": "script-src https://*.firebaseio.com; object-src",
  "browser_action": {
    "default_title": "Team Watch",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "injection.js"
      ]
    }
  ]
}
